<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:layout_width="128dp"
            android:layout_height="24dp"
            android:id="@+id/tvName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toTopOf="@+id/ivOpen"
            android:textSize="20sp"/>
    <TextView
            android:layout_width="128dp"
            android:layout_height="24dp"
            android:id="@+id/tvLimit" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ivOpen" android:textAlignment="textEnd" android:textSize="20sp"/>
    <ImageView
            android:layout_width="356dp"
            android:layout_height="152dp"
            app:srcCompat="@drawable/common_google_signin_btn_text_light_normal_background"
            android:id="@+id/ivOpen" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="128dp"
            android:layout_height="24dp"
            android:id="@+id/tvDate" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivOpen" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tvLocation" android:textSize="20sp"/>
    <TextView
            android:layout_width="128dp"
            android:layout_height="24dp"
            android:id="@+id/tvTime"
            app:layout_constraintTop_toBottomOf="@+id/ivOpen" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tvLocation" android:textAlignment="textEnd"
            android:textSize="20sp"/>
    <TextView
            android:layout_width="320dp"
            android:layout_height="24dp"
            android:id="@+id/tvLocation"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/ivOpen" android:textSize="20sp"/>
    <TextView
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:id="@+id/tvDescription" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLocation" android:textSize="16sp"/>
    <Button
            android:text="Going"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:id="@+id/goingButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>